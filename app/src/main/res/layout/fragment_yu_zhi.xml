<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="自动报警:"
            />

        <TextView
            android:id="@+id/oc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#3d2"
            android:layout_marginLeft="10dp"
            android:text="开"
            />

        <Switch
            android:checked="true"
            android:id="@+id/sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <TextView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="温       度:"
                />

            <EditText
                android:layout_weight="3"
                android:id="@+id/wd"
                android:textSize="30sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="#000"
                android:layout_width="0dp"
                android:text="50"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="湿        度:"
                />

            <EditText
                android:layout_weight="3"
                android:id="@+id/sd"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="0dp"
                android:singleLine="true"
                android:inputType="number"
                android:text="50"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="光        照:"
                />

            <EditText
                android:layout_weight="3"
                android:id="@+id/gz"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="50"
                android:inputType="number"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="CO2         :"
                />

            <EditText
                android:layout_weight="3"
                android:id="@+id/co"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:text="50"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="PM2.5     :"
                />

            <EditText
                android:layout_weight="3"
                android:id="@+id/pm"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:text="50"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="道路状态:"
                />

            <EditText
                android:layout_weight="3"
                android:id="@+id/dl"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:text="50"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:gravity="center"
            android:id="@+id/btn_save"
            android:text="保存"
            android:layout_marginLeft="200dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
